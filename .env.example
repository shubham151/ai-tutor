# Environment
NODE_ENV=development

# Database
DIRECT_URL="postgresql:url"
DATABASE_URL="postgresql:url"
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30000

# Authentication
SECRET_ACCESS_TOKEN=secret-key-access
SECRET_REFRESH_TOKEN=secret-key-refresh
ACCESS_TOKEN_EXPIRY="7d"
REFRESH_TOKEN_EXPIRY="7d"
OTP_EXPIRY_MINUTES=10
OTP_RESEND_COOLDOWN=60

# Email Service
EMAIL_PROVIDER="resend"
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="AI Tutor <noreply@spidermines.com>"

# File Storage
STORAGE_PROVIDER="local"
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760
PUBLIC_URL="/api/uploads"

# AI Providers
AI_DEFAULT_PROVIDER="google"

# Google AI
GOOGLE_GENERATIVE_AI_API_KEY="your-gemini-api-key"
GOOGLE_AI_MODEL="gemini-model"
GOOGLE_MAX_TOKENS=4000

# OpenAI (optional)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="openai-model"
OPENAI_MAX_TOKENS=4000

# Anthropic (optional)
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-model"
ANTHROPIC_MAX_TOKENS=4000

# Server Configuration
PORT=3000
CORS_ORIGIN="*"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100